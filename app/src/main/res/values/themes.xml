<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/stone</item>
         <item name="colorPrimaryVariant">@color/dark</item>
         <item name="android:statusBarColor">@color/latte</item>
    </style>

    <style name="Theme.MyNotes" parent="Base.Theme.MyNotes" />


<!--    custom splash screen-->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/latte</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/noatslogosplash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyNotes</item>
    </style>
</resources>